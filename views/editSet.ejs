<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Lego Collection</title>
  </head>
  <body>
    <!-- navigation -->
    <%- include('partials/navbar', {page: ''}) %>
    <!-- navigation ends -->

    <div class="container mx-auto">
      <!-- hero section -->
      <div class="hero bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Edit Set</h1>
            <p class="py-6">
              <%= set.name %>
            </p>
          </div>
        </div>
      </div>
      <!-- hero section ends -->

      <form action="/lego/editSet/<%= set.set_num%>" method="post">

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
          <div>
            <div class="mb-6">
              <label for="name" class="block text-gray-700 font-medium">Name</label>
              <input type="text" id="name" name="name" value="<%= set.name %>" required="" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
            <div class="mb-6">
              <label for="year" class="block text-gray-700 font-medium">Year</label>
              <input type="number" id="year" name="year"  value="<%= set.year %>" required="" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
          </div>
          <div>

            <div class="mb-6">
              <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts</label>
              <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>"  required="" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
            <div class="mb-6">
              <label for="img_url" class="block text-gray-700 font-medium">Image URL</label>
              <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>"  required="" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
          </div>

          <div>
            <div class="mb-6">
              <label for="theme_id" class="block text-gray-700 font-medium">Theme</label>
              <select id="theme_id" name="theme_id"  required="" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                <% themes.forEach(theme=>{ %>
                  <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                    <%= theme.name %>
                  </option>
                <% }) %>                
              </select>
            </div>

            <div class="mb-6">
              <label for="set_num" class="block text-gray-700 font-medium">Set Num</label>
              <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>"  readonly required="" class="cursor-not-allowed w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>

          </div>
        </div>

        <div class="mt-6">
          <button type="submit" class="btn btn-primary w-full ">Edit Set</button>
        </div>
 
      </form>
    </div>
   
  </body>
</html>
