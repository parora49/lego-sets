<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Lego Collection</title>
  </head>
  <body>
    <!-- navigation -->
    <%- include('partials/navbar', {page: '/lego/sets'}) %>
    <!-- navigation ends -->

    <div class="container mx-auto">
      <!-- hero section -->
      <div class="hero bg-base-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%= set.name%></h1>
            <p class="py-6">
              Below, you will find detailed information about the set:<%=
              set.name %>
            </p>
          </div>
        </div>
      </div>
      <!-- hero section ends -->

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-5 px-2">
        <div>
          <img
            class="w-full rounded-lg"
            src="<%= set.img_url%>"
            alt=" Set Image"
          />
        </div>
        <div class="prose">
          <p>
            <span class="font-bold">Set Name: </span> <%= set.name%> <br />
            <span class="font-bold">Year Released: </span> <%= set.year%> <br />
            <span class="font-bold">Theme: </span> <%= set.Theme.name %> <br />
            <span class="font-bold">Number of Parts: </span> <%= set.num_parts%>
            <br /><br />

            <span id="quote"></span>
            <br /><br />
            <a
              class="btn btn-primary btn-sm"
              href="#"
              onclick="history.back(); return false;"
              >RETURN</a
            >
          </p>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("https://quotable.io/random")
          .then((response) => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.json();
          })
          .then((data) => {
            const quoteContent = data.content;
            const quoteAuthor = data.author;
            const quoteElement = document.getElementById("quote");
            quoteElement.innerHTML = `"${quoteContent}"- <em>${quoteAuthor}</em>`;
          })
          .catch((error) => {
            console.error("Error fetching the quote:", error);
          });
      });
    </script>
  </body>
</html>
